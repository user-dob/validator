{
    "compilerOptions": {
        "module": "esnext",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "target": "esnext",
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "strict": true,
        "baseUrl": ".",
        "jsx": "react",
        "paths": {
            "src/*": [
                "./src/*"
            ],
            "test/*": [
                "./test/*"
            ]
        },
        "skipLibCheck": true,
        "lib": [
            "dom",
            "es2020"
        ]
    },
    "include": [
        "src/**/*",
        "test/**/*"
    ]
}